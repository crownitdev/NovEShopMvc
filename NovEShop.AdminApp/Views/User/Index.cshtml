@using NovEShop.Handler.Users.Queries
@model GetAllUsersPagingQueryResponse

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Danh sách người dùng</h1>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-md-2 col-sm-12">
                <a class="btn btn-success" asp-action="Create" asp-controller="User">Tạo mới</a>
            </div>
            <div class="col-md-4 col-sm-12">
            </div>
            <div class="col-md-6 col-sm-12">
                <form action="" method="get">
                    <div class="row">
                        <div class="col-md-8">
                            <input class="form-control" type="text" name="keyword" value="@ViewData["Keyword"]" placeholder="Nhập thông tin người dùng để tìm kiếm..." />
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary">Tìm</button>
                            <button type="submit" onclick="window.location.href='/user/index'" class="btn btn-dark">Khôi phục</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            @if (ViewData["Result"] != null)
            {
                <div id="msgAlert" class="alert alert-primary" role="alert">
                    @ViewData["Result"]
                </div>
            }
        </div>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Tên
                        </th>
                        <th>
                            Họ
                        </th>
                        <th>
                            Số điện thoại
                        </th>
                        <th>
                            Tên tài khoản
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Kích hoạt
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.ActionLink("Cập nhật", "Update", new { id = item.Id }) |
                                @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Xoá", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @await Component.InvokeAsync("Pager", Model)
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(function () {
            $("#msgAlert").fadeOut('slow');
        }, 2000);
    </script>
}